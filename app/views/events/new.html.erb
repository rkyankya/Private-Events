<div class="row">
  <div class="col"></div>
    <div class="col-4">
      <%= form_for @event do |f| %>
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>

        <%= f.label :date %>
        <%= f.datetime_field :date, class: 'form-control' %>

        <%= f.label :location %>
        <%= f.text_field :location, class: 'form-control' %>

        <%= f.submit 'Create event' %>
      <% end %>
    </div>
  <div class="col"></div>
</div>