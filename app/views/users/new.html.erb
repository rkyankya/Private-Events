<div class="row">
    <div class="col"></div>
        <div class="col-4">
            <%= form_for @user do |f| %>
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>

                <%= f.label :username %>
                <%= f.text_field :username, class: 'form-control' %>

                <%= f.submit 'Sign up', class: 'btn btn-primary' %>
            <% end %>
        </div>
    <div class="col"></div>
</div>
